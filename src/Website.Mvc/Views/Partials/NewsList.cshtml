@inherits UmbracoTemplatePage
@{   
    
    const int maxNoChars = 100;
    var events = CurrentPage.Children.OrderBy("NewsDate desc");
    foreach (var item in events)
    {
        <div class="well">
            <h4><a href="@item.Url">@item.Name</a></h4>
            <p><span class="label">@item.NewsDate.ToString(Umbraco.GetDictionaryValue("TimeFormat"))</span> @Umbraco.Truncate(Umbraco.StripHtml(item.BodyText.ToString()), maxNoChars, true)</p>
        </div>
    }
    
}




