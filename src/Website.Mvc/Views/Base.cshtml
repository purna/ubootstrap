@using System.Threading
@using System.Web.Optimization
@inherits UmbracoTemplatePage
@{
	Layout = null;
    var bodyDirAttribute = Thread.CurrentThread.CurrentUICulture.TextInfo.IsRightToLeft ? "dir=\"rtl\"" : "";
}

<!doctype html>
<html lang="@Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName">
<head>
    <meta charset="utf-8" />
    <title>@Html.Partial("PageTitle")</title> 
    @Html.Partial("HeaderTags")
    @Html.Partial("StyleSheets")
</head>
<body @bodyDirAttribute>
    <header class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container" role="banner">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>

        <!-- Render a field -->
        <a class="brand" href="/">@Umbraco.Field("siteName", recursive : true)</a>
        <nav role="navigation" class="nav-collapse">
            @Html.Partial("Navigation")
            @Html.Partial("SearchBox")
        </nav>
        </div>
    </div>
    </header>
    
    <div class="container">
        <div class="hero-unit">
            @RenderSection("Header", required: true)
        </div>
        <div class="row">
        <section class="span9" role="main">
            @RenderBody()
        </section>
        <aside class="span3" role="complementary">
            @RenderSection("Sidebar", required: false)
        </aside>
        </div>
    </div>
    <footer class="footer" role="contentinfo">
        <div class="container">
            <div class="row">
                <div class="span4">
                    @Html.Partial("RelatedLinks")
                </div>
                <div class="span4">
                    @Html.Partial("LanguageSelector")
                </div>
                <div class="span4">
                    @Html.Partial("SocialLinks")
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    <script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/mvc/3.0/jquery.validate.unobtrusive.min.js"></script>
    @Scripts.Render("~/bundles/js")
    @RenderSection("Scripts", required: false)

</body>
</html>